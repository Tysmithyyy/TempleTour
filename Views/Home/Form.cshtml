@model TempleTour.Models.Appointment

<div>
    <h3>Signup Information</h3>
    <!--allows user to fill out the form based on the appointment they selected and then turns it into an appointment-->

    <form class="col-8" asp-action="Form" method="post">
        <div class="form-group">
            <label asp-for="Date">Date</label>
            <input class="form-control" asp-for="Date" value="@Model.Date" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Time">Time</label>
            <input class="form-control" asp-for="Time" value="@Model.Time" readonly />
        </div>
        <div class="form-group">
            <label asp-for="GroupName">Name of Group</label>
            <input class="form-control" asp-for="GroupName" />
        </div>
        <div class="form-group">
            <label asp-for="GroupSize">Size of Group</label>
            <input class="form-control" asp-for="GroupSize" />
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress">Email Address</label>
            <input type="email" class="form-control" asp-for="EmailAddress" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input type="tel" class="form-control" asp-for="PhoneNumber" />
        </div>

        <button type="submit">Sign up</button>
</form>

    <div asp-validation-summary="All"></div>
</div>
